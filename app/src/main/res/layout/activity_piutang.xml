<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piutang Customer"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <TableLayout
        android:id="@+id/table_piutang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:background="#FFFFFF"
        android:padding="8dp">

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nomor Nota"
                android:padding="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:maxWidth="120dp" /> <!-- Set maxWidth -->

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Nama Customer"
                android:padding="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:maxWidth="150dp" /> <!-- Set maxWidth -->

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Jumlah Piutang"
                android:padding="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:maxWidth="120dp" /> <!-- Set maxWidth -->

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Action"
                android:padding="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:maxWidth="100dp" /> <!-- Set maxWidth -->
        </TableRow>

        <!-- Data rows will be added programmatically -->
    </TableLayout>

</LinearLayout>